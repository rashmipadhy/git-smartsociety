<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_01"
    tools:context=".Activity.RegistrationActivity">

    <ImageButton
        android:id="@+id/imagbtnSettings"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:background="@color/transparent"
        android:contentDescription="DIVIDER"
        android:elevation="20dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.957"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022"
        app:srcCompat="@drawable/settings" />

    <EditText
        android:id="@+id/etrUserName"
        android:layout_width="321dp"
        android:layout_height="39dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#808080"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.148" />

    <EditText
        android:id="@+id/etrPhone"
        android:layout_width="321dp"
        android:layout_height="39dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/phone"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Phone"
        android:inputType="text|phone"
        android:paddingLeft="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#808080"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/etrUserName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etrUserName"
        app:layout_constraintTop_toBottomOf="@+id/etrUserName"
        app:layout_constraintVertical_bias="0.032" />


    <EditText
        android:id="@+id/etrEmail"
        android:layout_width="321dp"
        android:layout_height="39dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/mail"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#808080"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/etrPhone"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etrPhone"
        app:layout_constraintTop_toBottomOf="@+id/etrPhone"
        app:layout_constraintVertical_bias="0.036" />

    <EditText
        android:id="@+id/etrOrgid"
        android:layout_width="321dp"
        android:layout_height="39dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/key"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Organisation Id"
        android:inputType="text|number"
        android:paddingLeft="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#808080"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/etrEmail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etrEmail"
        app:layout_constraintTop_toBottomOf="@+id/etrEmail"
        app:layout_constraintVertical_bias="0.036" />

    <EditText
        android:id="@+id/etrPassword"
        android:layout_width="321dp"
        android:layout_height="39dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/pin"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#808080"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/etrOrgid"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etrOrgid"
        app:layout_constraintTop_toBottomOf="@+id/etrOrgid"
        app:layout_constraintVertical_bias="0.04" />

    <Button
        android:id="@+id/rbutton"
        android:layout_width="185dp"
        android:layout_height="44dp"
        android:text="Register"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@color/btn_01"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/etrPassword"
        app:layout_constraintStart_toStartOf="@+id/etrPassword"
        app:layout_constraintTop_toBottomOf="@+id/etrPassword"
        app:layout_constraintVertical_bias="0.079" />

    <TextView
        android:id="@+id/alreadyUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account ?"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.31"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.977" />

    <TextView
        android:id="@+id/rLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login here"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/alreadyUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.773"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/alreadyUser"
        app:layout_constraintVertical_bias="0.977" />


</androidx.constraintlayout.widget.ConstraintLayout>